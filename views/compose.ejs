<%-include("partials/header")%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <p>Title</p>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-6">
                <textarea name="titletext" class="form-control" rows="1" placeholder="" required></textarea>
            </div>
        </div>
        <label>Post</label>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-6">
                <textarea name="textpost" class="form-control" rows="3" placeholder="" required></textarea>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%-include("partials/footer")%>